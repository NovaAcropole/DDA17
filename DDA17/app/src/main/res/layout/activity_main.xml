<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="br.na.dda17.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent2_trans"
        android:padding="14dp"
        android:src="@drawable/na_logo_min" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btProgramacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/menu_space"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icon1_programa" />

            <TextView
                android:id="@+id/tv_programacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Programação" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btExposicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/menu_space"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icon2_expo" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_exposicao"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Exposição" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btConcerto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icon3_recital" />

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:id="@+id/tv_concerto"
                android:text="Concerto" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btPlateia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/menu_space"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icon4_plateia" />

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:id="@+id/tv_plateia"
                android:layout_height="wrap_content"
                android:text="Formação\nde Platéia" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btPalestra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/menu_space"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icon5_palestra" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_palestra"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Palestra\nMagna" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btSobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:src="@drawable/icon6_sobre" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_sobre"
                android:layout_height="wrap_content"
                android:text="Sobre" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/adorno" />

</LinearLayout>

