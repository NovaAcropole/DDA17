<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="br.na.dda17.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorAccent2_trans"
        android:padding="14dp"
        android:src="@drawable/na_logo_min" />

    <View style="@style/ViewExterno" />

    <LinearLayout style="@style/LinerLayoutExterno">

        <View style="@style/ViewInterno" />

        <LinearLayout
            android:id="@+id/btProgramacao"
            style="@style/LinerLayoutInterno">

            <ImageView
                style="@style/MenuImage"
                android:src="@drawable/icon1_programa" />

            <TextView
                android:id="@+id/tv_programacao"

                style="@style/MenuTextView"
                android:text="Programação" />

        </LinearLayout>

        <View style="@style/ViewInterno" />

        <LinearLayout
            android:id="@+id/btExposicao"
            style="@style/LinerLayoutInterno">

            <ImageView
                style="@style/MenuImage"
                android:src="@drawable/icon2_expo" />

            <TextView
                android:id="@+id/tv_exposicao"
                style="@style/MenuTextView"

                android:text="Exposição" />

        </LinearLayout>

        <View style="@style/ViewInterno" />

        <LinearLayout
            android:id="@+id/btConcerto"
            style="@style/LinerLayoutInterno">

            <ImageView
                style="@style/MenuImage"
                android:src="@drawable/icon3_recital" />

            <TextView
                android:id="@+id/tv_concerto"
                style="@style/MenuTextView"
                android:text="Concerto" />

        </LinearLayout>

        <View style="@style/ViewInterno" />

    </LinearLayout>

    <View style="@style/ViewExterno" />

    <LinearLayout style="@style/LinerLayoutExterno">

        <View style="@style/ViewInterno" />

        <LinearLayout
            android:id="@+id/btPlateia"
            style="@style/LinerLayoutInterno">

            <ImageView
                style="@style/MenuImage"
                android:src="@drawable/icon4_plateia" />

            <TextView
                android:id="@+id/tv_plateia"
                style="@style/MenuTextView"
                android:text="Formação \nde platéia" />

        </LinearLayout>

        <View style="@style/ViewInterno" />

        <LinearLayout
            android:id="@+id/btPalestra"
            style="@style/LinerLayoutInterno">

            <ImageView
                style="@style/MenuImage"
                android:src="@drawable/icon5_palestra" />

            <TextView
                android:id="@+id/tv_palestra"
                style="@style/MenuTextView"
                android:text="Palestra\nMagna" />

        </LinearLayout>

        <View style="@style/ViewInterno" />

        <LinearLayout
            android:id="@+id/btSobre"
            style="@style/LinerLayoutInterno">

            <ImageView
                style="@style/MenuImage"
                android:src="@drawable/icon6_sobre" />

            <TextView
                android:id="@+id/tv_sobre"
                style="@style/MenuTextView"
                android:layout_width="wrap_content"
                android:text="Sobre" />

        </LinearLayout>

        <View style="@style/ViewInterno" />

    </LinearLayout>

    <View style="@style/ViewExterno" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/adorno" />

</LinearLayout>

