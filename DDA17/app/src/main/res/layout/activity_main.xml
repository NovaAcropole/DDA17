<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="br.na.dda17.activity.MainActivity">

    <ImageView
        android:id="@id/image_main"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/fundo"
        android:padding="22dp"
        android:scaleType="fitEnd"
        android:src="@drawable/banner_inferior_transp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-14dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <android.support.constraint.Guideline
        android:id="@id/guidelineE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <android.support.constraint.Guideline
        android:id="@id/guidelineD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <android.support.constraint.Guideline
        android:id="@id/guidelineT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@id/guidelineB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <ImageView
        android:id="@id/icon_programa"
        style="@style/MenuImage"
        android:src="@drawable/icon1_programa"
        app:layout_constraintBottom_toTopOf="@id/icon_plateia"
        app:layout_constraintLeft_toLeftOf="@id/guidelineE"
        app:layout_constraintRight_toLeftOf="@id/icon_expo"
        app:layout_constraintTop_toBottomOf="@id/guidelineT" />

    <TextView
        android:id="@id/tv_programacao"
        style="@style/MenuTextView"
        android:text="@string/menu_1programacao"
        app:layout_constraintLeft_toLeftOf="@id/icon_programa"
        app:layout_constraintRight_toRightOf="@id/icon_programa"
        app:layout_constraintTop_toBottomOf="@id/icon_programa" />

    <ImageView
        android:id="@id/icon_expo"
        style="@style/MenuImage"
        android:src="@drawable/icon2_expo"
        app:layout_constraintBottom_toTopOf="@id/icon_palestra"
        app:layout_constraintLeft_toRightOf="@id/icon_programa"
        app:layout_constraintRight_toLeftOf="@id/icon_concerto"
        app:layout_constraintTop_toBottomOf="@id/guidelineT" />

    <TextView
        android:id="@id/tv_exposicao"
        style="@style/MenuTextView"
        android:text="@string/menu_2expo"
        app:layout_constraintLeft_toLeftOf="@id/icon_expo"
        app:layout_constraintRight_toRightOf="@id/icon_expo"
        app:layout_constraintTop_toBottomOf="@id/icon_expo" />

    <ImageView
        android:id="@id/icon_concerto"
        style="@style/MenuImage"
        android:src="@drawable/icon3_recital"
        app:layout_constraintBottom_toTopOf="@id/icon_sobre"
        app:layout_constraintLeft_toRightOf="@id/icon_expo"
        app:layout_constraintRight_toLeftOf="@id/guidelineD"
        app:layout_constraintTop_toBottomOf="@id/guidelineT" />

    <TextView
        android:id="@id/tv_concerto"
        style="@style/MenuTextView"
        android:text="@string/menu_3concerto"
        app:layout_constraintLeft_toLeftOf="@id/icon_concerto"
        app:layout_constraintRight_toRightOf="@id/icon_concerto"
        app:layout_constraintTop_toBottomOf="@id/icon_concerto" />

    <ImageView
        android:id="@id/icon_plateia"
        style="@style/MenuImage"
        android:src="@drawable/icon4_plateia"
        app:layout_constraintBottom_toTopOf="@id/guidelineB"
        app:layout_constraintLeft_toLeftOf="@id/guidelineE"
        app:layout_constraintRight_toLeftOf="@id/icon_palestra"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@id/tv_plateia"
        style="@style/MenuTextView"
        android:text="@string/menu_4audicao"
        app:layout_constraintLeft_toLeftOf="@id/icon_plateia"
        app:layout_constraintRight_toRightOf="@id/icon_plateia"
        app:layout_constraintTop_toBottomOf="@id/icon_plateia" />

    <ImageView
        android:id="@id/icon_palestra"
        style="@style/MenuImage"
        android:src="@drawable/icon5_palestra"
        app:layout_constraintBottom_toTopOf="@id/guidelineB"
        app:layout_constraintLeft_toRightOf="@id/icon_plateia"
        app:layout_constraintRight_toLeftOf="@id/icon_sobre" />

    <TextView
        android:id="@id/tv_palestra"
        style="@style/MenuTextView"
        android:text="@string/menu_5palestra"
        app:layout_constraintLeft_toLeftOf="@id/icon_palestra"
        app:layout_constraintRight_toRightOf="@id/icon_palestra"
        app:layout_constraintTop_toBottomOf="@id/icon_palestra" />

    <ImageView
        android:id="@id/icon_sobre"
        style="@style/MenuImage"
        android:src="@drawable/icon6_sobre"
        app:layout_constraintBottom_toTopOf="@id/guidelineB"
        app:layout_constraintLeft_toRightOf="@id/icon_palestra"
        app:layout_constraintRight_toLeftOf="@id/guidelineD" />

    <TextView
        android:id="@id/tv_sobre"
        style="@style/MenuTextView"
        android:text="@string/menu_6sobre"
        app:layout_constraintLeft_toLeftOf="@id/icon_sobre"
        app:layout_constraintRight_toRightOf="@id/icon_sobre"
        app:layout_constraintTop_toBottomOf="@id/icon_sobre" />

    <ImageView
        android:id="@id/imageView"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:src="@drawable/na_logo_min"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>

