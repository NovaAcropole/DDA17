<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.na.dda17.activity.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_fundoBoasVindas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/iv_logoBranca"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignBottom="@id/iv_fundoBoasVindas"
            android:paddingStart="16dp"
            android:src="@drawable/logo_branca" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_above="@+id/iv_logoBranca"
            android:layout_alignEnd="@+id/iv_logoBranca"
            android:layout_alignRight="@+id/iv_logoBranca"
            android:src="@drawable/logo_60anos" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_margin="15dp"
            android:src="@drawable/logo_dda" />
    </RelativeLayout>

</FrameLayout>
